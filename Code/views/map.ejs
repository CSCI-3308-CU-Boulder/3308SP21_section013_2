<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script>
    var lat = 40.014;
    var lon = -105.270;
    // initialize map
    map = L.map('mapDiv').setView([lat, lon], 13);
    // set map tiles source
    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors',
    maxZoom: 18,
    }).addTo(map);
    $.ajax({url:'/mapData', dataType:"json"}).then(function(data) {
        for(var i = 0; i < data.length; i++){
            marker = L.marker([data[i].lat, data[i].lng]).addTo(map);
            var string = '<strong><center>';
            string += data[i].trailhead;
            string += '</center></strong>'
            string += '<img style = "height:100pt; border-radius: 20px"  src = "https://fastly.4sqi.net/img/general/600x600/483907126_BF20RFocuTX_nKrMHbOLBQN_hZlHmoeUbQ5dSyFA2FE.jpg"> </br><strong>Fees:</strong> ';
            string += data[i].fee;
            string += '</br> <strong>Restroom:</strong>';
            string += data[i].restroom;
            string += '</br> <strong>Bikes:</strong> ';
            string += data[i].bikes;
            string += '</br> <strong>Dogs:</strong> ';
            string += data[i].dogs;
            string += '</br>';
            marker.bindPopup(string);
                marker.on ('mouseover', function(event) {
                    this.openPopup();
                });
                marker.on ('mouseout', function(event) {
                    this.closePopup();
                });       
    }
    })
    $.ajax({url:'/parkData', dataType:"json"}).then(function(data) {
        for(var i = 0; i < data.length; i++){
            marker = L.marker([data[i].lat, data[i].lng]).addTo(map);
            var string = '<strong><center>';
            string += data[i].name;
            string += '</center></strong>'
            string += '<img style = "height:100pt; border-radius: 20px"  src = "https://fastly.4sqi.net/img/general/600x600/483907126_BF20RFocuTX_nKrMHbOLBQN_hZlHmoeUbQ5dSyFA2FE.jpg"> </br><strong>Picnic Shelter:</strong> ';
            string += data[i].picnicShelter;
            string += '</br> <strong>Playground:</strong>';
            string += data[i].playground;
            string += '</br> <strong>Restroom:</strong> ';
            string += data[i].restroom;
            string += '</br> <strong>Sports Field:</strong> ';
            string += data[i].sportsField;
            string += '</br> <strong>Tennis Court:</strong> ';
            string += data[i].tennis;
            string += '</br> <strong>Basketball Court:</strong> ';
            string += data[i].basketball;
            string += '</br> <strong>Volleyball Court:</strong> ';
            string += data[i].volleyball;
            string += '</br> <strong>RTD Access:</strong> ';
            string += data[i].rtd;
            string += '</br> <strong>Bike Path:</strong> ';
            string += data[i].bikePath;
            string += '</br>';
            marker.bindPopup(string);
                marker.on ('mouseover', function(event) {
                    this.openPopup();
                });
                marker.on ('mouseout', function(event) {
                    this.closePopup();
                });       
    }
    })
</script>
